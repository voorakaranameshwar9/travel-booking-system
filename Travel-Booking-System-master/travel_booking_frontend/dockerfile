# frontend/Dockerfile (multi-stage to build & serve with nginx)
FROM node:18-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm ci --legacy-peer-deps
COPY . .
RUN npm run build

FROM nginx:stable-alpine
COPY --from=build /app/build /usr/share/nginx/html
# optionally copy custom nginx.conf if you need historyApiFallback
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]